<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<report
		id="action_report_job"
		string="Job Certificat"
		model="job.certifica"
		report_type="qweb-pdf"
		name="attestation.job"
		print_report_name="'Attestation du Travail'"/>

        <template id="job">
        
        <t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
		
			 <div style="position:absolute;left:250px;top:120.62px">
			 <h2>ATTESTATION DE TRAVAIL</h2>
			 </div>

			 <div style="position:absolute;left:570.99px;top:20.98px">
				<span>Casablanca, le <span t-field="o.write_date"/></span>
			 </div>

			<div style="position:relative;left:70.82px;top:220.26px">
				Nous soussignés, société <span t-field="o.company_name"/> à Casablanca, certifions que :
			</div>

			<div style="position:absolute;left:250px;top:269.97px">
				<span class="cls_017">Mr.</span>
				<span t-field="o.employee_name"/>
			</div>

			<div style="position:absolute;left:250px;top:286.89px" class="cls_009">
				<span class="cls_009">(C.N.S.S. N° </span>
				<span t-field="o.cnss_number"/>
				<span class="cls_011">)</span>
			</div>

			<div style="position:relative;left:70.82px;top:340.17px" class="cls_004">
				<span class="cls_004">Est employé au sein de notre société depuis le  </span><span t-field="o.hire_date"/>
			</div>

			<div style="position:relative;left:70.82px;top:384.65px" class="cls_012">
				<span class="cls_012">Actuellement, il occupe la fonction de  </span>
				<span t-field="o.occupied_job"/>
			</div>

			<div style="position:absolute;left:70.82px;top:500.49px" class="cls_004">
				<span class="cls_004">La présente attestation est délivrée à l’intéressé sur sa demande pour servir et valoir ce que de droit.</span>
			</div>
			
			<div style="position:absolute;left:570.99px;top:595.95px" class="cls_004">
				<span class="cls_004">Directeur Ressources Humaines</span>
			</div>

			<div style="position:absolute;left:570.99px;top:660.83px" class="cls_005">
				<span t-field="o.manager"/>
			</div>

			<div style="position:absolute;left:289.01px;top:800.88px" class="cls_016">
				<span class="cls_016">PIED</span>
			</div>
			
			</t>
		</t>
        </template>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<report
		id="action_report_job"
		string="Job Certificat"
		model="job.certifica"
		report_type="qweb-pdf"
		name="attestation.job"
		print_report_name="'Attestation du Travail'"/>

        <template id="job">
        
        <t t-call="web.html_container">
			<t t-set="dateImpression" t-value="{
			'jour':context_timestamp(datetime.datetime.now()).strftime('%d %B %Y'),
			'heure':context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S'),
			'auteur':user.name
			}"/>
		</t>

        </template>

</odoo>
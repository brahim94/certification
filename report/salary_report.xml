<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<report
		id="action_report_salary"
		string="Salary Certificat"
		model="salary.certifica"
		report_type="qweb-pdf"
		name="attestation.salary"
		print_report_name="'Attestation de Salaire'"/>

        <template id="salary">
        
        <t t-call="web.html_container">
			<t t-set="dateImpression" t-value="{
			'jour':context_timestamp(datetime.datetime.now()).strftime('%d %B %Y'),
			'heure':context_timestamp(datetime.datetime.now()).strftime('%H:%M:%S'),
			'auteur':user.name
			}"/>
		</t>

        </template>

</odoo>